    <TextView
        android:id="@+id/text_username"
        android:layout_width="117dp"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="9dp"
        android:text="@string/username"
        app:layout_constraintBottom_toTopOf="@+id/textEdit_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textEdit_password"
        android:hint="@string/password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="120dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_password" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="82dp"
        android:layout_height="0dp"
        android:text="@string/password"
        app:layout_constraintBottom_toTopOf="@+id/textEdit_password"
        app:layout_constraintStart_toStartOf="@+id/textEdit_password"
        app:layout_constraintTop_toBottomOf="@+id/textEdit_username" />

    <EditText
        android:id="@+id/textEdit_username"
        android:hint="@string/username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="62dp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/text_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_username" />

